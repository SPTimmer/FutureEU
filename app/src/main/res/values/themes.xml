<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FutureEU" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_008</item>
        <item name="colorPrimaryVariant">@color/blue_00b</item>
        <item name="colorOnPrimary">@color/light_blue_eef</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="tabBackground">@color/blue_008</item>
        <item name="tabTextColor">@color/light_grey</item>
        <item name="tabSelectedTextColor">@color/light_blue_eef</item>
    </style>

    <style name="Theme.FutureEU.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FutureEU.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FutureEU.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>